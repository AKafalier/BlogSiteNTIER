@model List<BlogSite.Entities.CvItem>
<h2>CV Öğeleri</h2>
<a href="/Admin/AddCvItem" class="btn btn-success mb-2">+ Yeni</a>
<table class="table table-bordered">
    <tr><th>Başlık</th><th>İşlem</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>
                <a href="/Admin/EditCvItem/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <a href="/Admin/DeleteCvItem/@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
